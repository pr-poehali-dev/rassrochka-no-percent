{
  "tests": [
    {
      "name": "Update with invalid status",
      "method": "POST",
      "path": "/",
      "body": {
        "id": 1,
        "status": "invalid_status"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Invalid status"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Update with missing id",
      "method": "POST",
      "path": "/",
      "body": {
        "status": "approved"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "success": false,
        "error": "Missing id or status"
      },
      "bodyMatcher": "partial"
    }
  ]
}
